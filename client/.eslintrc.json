{
    "parser": "babel-eslint",
    "extends": "airbnb",
    "plugins": [
      "react",
      "jsx-a11y",
      "import"
    ],
    "rules": {
      "max-len": ["error", { "code": 80 }],
      "linebreak-style": 0,
      "react/jsx-filename-extension": [
        "off", { "extensions": [".js", ".jsx"] }
      ],
      "react/prefer-stateless-function": [
        "error", { "ignorePureComponents": true }
      ],
      "react/boolean-prop-naming": [
        "error", { "propTypeNames": ["bool", "mutuallyExclusiveTrueProps"] }
      ],
      "react/destructuring-assignment": [
        "error", "always", { "ignoreClassFields": false }
      ],
      "react/forbid-prop-types": [0, { "forbid": [] }],
      "import/extensions": [1, "never", { "svg": "always" }],
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true,
          "optionalDependencies": false,
          "peerDependencies": false
        }
      ],
      "indent": ["error", 4, { "ignoredNodes": ["JSXElement *", "JSXElement"] }],
      "react/jsx-indent": ["error", 4]
    },
    "env": { "browser": true }
  }